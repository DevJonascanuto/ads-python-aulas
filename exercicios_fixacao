# par ou impar
numero = int(input('digite um numero '))

if numero % 2 == 0:
    print (f' o numero {numero} é par.')
else:
    print (f'o numero {numero} é impar')

# maior ou menor de idade

idade = int(input('digite sua idade '))

if idade >= 18:
    print (f'voce tem {idade} anos, portanto é maior de idade')
else:
    print(f'voce tem {idade}anos,portanto é menor de idade.')


# aprovado, em recuperação ou reprovado.

nota = int(input('digite sua nota para saber se esta de recuperação '))

if nota >= 7:
    print (f'sua nota é {nota} voçe foi aprovado')
elif nota >= 5 <= 6.9:
    print (f'sua nota é {nota} e voce esta em recuperação')
else:
    print (f'sua nota é {nota} e voce esta reprovado')